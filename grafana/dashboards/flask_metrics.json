{
  "id": null,
  "uid": null,
  "title": "Flask App Monitoring",
  "timezone": "browser",
  "panels": [
    {
      "type": "graph",
      "title": "HTTP Requests Total",
      "targets": [
        {
          "expr": "http_requests_total",
          "legendFormat": "Requests",
          "refId": "A"
        }
      ],
      "datasource": "Prometheus",
      "xaxis": { "mode": "time" },
      "yaxes": [{ "format": "short" }, { "format": "short" }]
    },
    {
      "type": "graph",
      "title": "Container CPU Usage (%)",
      "targets": [
        {
          "expr": "node_cpu_seconds_total",
          "legendFormat": "{{name}}",
          "refId": "B"
        }
      ],
      "datasource": "Prometheus",
      "xaxis": { "mode": "time" },
      "yaxes": [
        { "format": "percent", "min": 0, "max": 100 },
        { "format": "short" }
      ]
    },
    {
      "type": "graph",
      "title": "Container Memory Usage (MB)",
      "targets": [
        {
          "expr": "node_memory_MemTotal_bytes",
          "legendFormat": "{{name}}",
          "refId": "C"
        }
      ],
      "datasource": "Prometheus",
      "xaxis": { "mode": "time" },
      "yaxes": [
        { "format": "megabytes", "min": 0 },
        { "format": "short" }
      ]
    }
  ],
  "schemaVersion": 16,
  "version": 1,
  "refresh": "5s",
  "editable": true
}
